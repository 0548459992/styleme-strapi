{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
  "fullName": {
    "type": "string",
    "required": true
  },
  "slug": {
    "type": "uid",
    "targetField": "fullName",
    "required": true
  },
    "bio": {
      "type": "text"
    },
    "profileImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "author"
    }
  }
}
